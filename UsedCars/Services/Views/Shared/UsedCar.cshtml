<div class="pageButton">
    @if (Model.PreviousPageId >= 0)
    {
        <button id="previousButton1" value=@Model.PreviousPageId onclick="previousPage()">Previous</button>
    }
    @if (Model.ResultList.Count() >  Model.PageSize)
    {
        <button id="nextButton1" value="@Model.NextPageId" onclick ="nextPage()">Next</button>
    }
</div>



